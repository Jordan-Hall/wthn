{
  "name": "ioc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "modules/ioc/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "main": "modules/ioc/src/index.js",
        "tsConfig": "modules/ioc/tsconfig.lib.json",
        "outputPath": "dist/ioc",
        "assets": ["modules/ioc/*.md"],
        "generatePackageJson": true,
        "format": ["cjs", "esm"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs ioc {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["modules/ioc/**/*.ts", "modules/ioc/package.json"]
      }
    },
    "test": {
      "executor": "@nx-bun/nx:test",
      "options": {
        "smol": false,
        "bail": true,
        "bun": false
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "postTargets": ["ioc:npm", "ioc:github"],
        "versionTagPrefix": "v"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}
