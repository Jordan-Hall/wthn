{
  "name": "if-else",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "modules/directives/if-else/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx-bun/nx:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "entrypoints": ["modules/directives/if-else/src/index.js"],
        "outputPath": "dist/if-else",
        "smol": false,
        "bun": true
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs if-else {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "modules/directives/if-else/**/*.ts",
          "modules/directives/if-else/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx-bun/nx:test",
      "options": {
        "smol": false,
        "bail": true,
        "bun": false
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "postTargets": ["if-else:npm", "if-else:github"],
        "versionTagPrefix": "v"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}
